<header>
<h1>Contact List</h1>
</header>
<h3>Welcome to the contact management page. </h3><br>
  <div class="container">
    <h3>
      <a href="/users/user">Create New User</a>
    </h3>
    <h1>User List</h1>
    <% if(users.length>0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>E-mail</th>
            <th>Phone</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<users.length;i++) { %>
            <tr>
              <td>
                <%= users[i].number%>
              </td>
              <td>
                <%= users[i].name%>
              </td>
              <td>
                <%= users[i].email%>
              </td>
              <td>
                  <%= users[i].phone%>
                </td>
              <td>
                <a href="/users/user/<%= users[i]._id%>">
                  Edit
                </a>
              </td>
              <td>
                <button class="deleteButton" data-uid="<%= users[i]._id%>">
                  Delete
                </button>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No users found.</div>
        <% } %>
  </div>
</body>

